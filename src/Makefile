CXX = g++
CXXFLAGS = -std=c++14 -O2 -Wall -pedantic
OBJECT_FILES = graph.o
BIN_FILES = highway-dimension.out

all: $(BIN_FILES)

%.out: %.o $(OBJECT_FILES)
	$(CXX) $(CXXFLAGS) $^ -o $@

.PHONY: clean clean-all

clean:
	rm -f *.o

clean-all: clean
	rm -f *.out

# Autogenerated
graph.o: graph.cpp graph.h
highway-dimension.o: highway-dimension.cpp graph.h
